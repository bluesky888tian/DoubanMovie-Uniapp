/* 热门预告 start */
.hot-movies {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
	padding: 0rpx 20rpx 20rpx 20rpx;
}
.hot-movie-single {
	width: 350rpx;
	height: 220rpx;
	margin-top: 10rpx;
}

/* 热门预告 end */

/* 猜你喜欢 start */
.guess-u-like {
	display: flex;
	flex-direction: column;
}
.single-like-movie {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	padding: 30rpx 20rpx;
}
.like-movie {
	width: 200rpx;
	height: 260rpx;
	border-radius: 3%;
	box-shadow: 2px 2px 6px #888888;
}
.movie-desc {
	width: 340rpx;
	display: flex;
	flex-direction: column;
	margin-left: 26rpx;
}
.movie-title {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.movie-info {
	color: #808080;
	font-size: 14px;
}

/* 点赞css */
.movie-oper {
	width: 140rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	
	border-left: dashed 2px;
	border-left-color: #dbdbda;
}
.praise-ico {
	width: 40rpx;
	height: 40rpx;
	align-self: center;
}
.praise-me {
	font-size: 14px;
	color: #feab2a;
	align-self: center;
}
.animation-opacity {
	font-weight: bold;
	opacity: 0;
}

