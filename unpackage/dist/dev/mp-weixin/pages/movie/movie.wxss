.player {
	display: flex;
	justify-content: center;
	background-color: #f7f4f9 ;
}
.movie {
	width: 100%;
	height: 435rpx;
}

/* 影片基本信息 start */
.movie-info {
	padding: 55rpx 20rpx;
	display: flex;
	flex-direction: row;
	background-color: #f7f4f9;
}
.cover {
	width: 280rpx;
	height: 380rpx;
	box-shadow: 2px 2px 6px #888888;
}
.movie-desc {
	display: flex;
	flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.title {
	font-size: 30px;
}
.basic-info {
	color: darkgray;
	font-size: 13px;
	line-height: 36rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

/* 影片基本信息 end */

/* 评分块 start */
.score-block {
	background-color: white;
	margin-top: 20rpx;
	width: 360rpx;
	height: 90rpx;
	padding: 20rpx;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	/* 追加阴影效果 */
	box-shadow: 3px 2px 10px #dedede;
}
.score-words {
	font-size: 12px;
	color: grey;
}
.movie-score {
	font-size: 26px;
	font-weight: bold;
	margin-left: 8rpx;
	color: #FEAB2A;
}
.prise-counts {
	font-size: 12px;
	color: grey;
	line-height: 44rpx;
}

/* 评分块 end */

/* 剧情介绍 start */
.plots-block {
	background-color: #f7f4f9;
	padding: 40rpx 40rpx;
}
.plots-title {
	color: #A9A9A9;
	font-size: 14px;
}
.plots-desc {
	margin-top: 10rpx;
	font-size: 16px;
}

/* 剧情介绍 end */

/* 剧照 start */
.scroll-block {
	background-color: #f7f4f9;
	padding: 45rpx 40rpx;
	/* display: flex;
	flex-direction: column; */
}
.scroll-list {
	width: 100%;
	white-space: nowrap;
	margin-top: 20rpx;
}
.plot-image {
	width: 220rpx;
	height: 320rpx;
	margin-right: 10rpx;
}

/* 剧照 end */

/* 演职人员 end */
.single-actor {
	width: 170rpx;
	height: 240rpx;
	margin-right: 10rpx;
}
.actor-wapper {
	display: inline-block;
}
.actor-name0 {
	width: 170rpx;
	text-align: center;
	font-size: 15px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.actor-role0 {
	width: 170rpx;
	text-align: center;
	font-size: 13px;
	color: #A9A9A9;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.actor-name1{
	display: none;
}
.actor-role1{
	display: none;
}

/* 演职人员 end */

/*媒体分享图片*/
.sharephoto{
	    width: 260rpx;
	    height: 90rpx;
	    position: absolute;
	    top: 0;
	    left: 0;
	    right: 0;
	    text-align: center;
	    background-color: #f7f4f9;
	    margin-top: 170rpx;
	    border: none;
	    font-size: 33rpx;
	    font-weight: 300;
	    border-radius: 10rpx;
	    transition-duration: 0.4s;
	    box-shadow: 2px 2px 6px #888888;
}

